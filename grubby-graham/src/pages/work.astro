---
import { getCollection } from 'astro:content';
import ContactCTA from '../components/ContactCTA.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = (await getCollection('work')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
	title="Projects | Fabio Dias"
	description="Projects by Fabio Dias â€” from art installations to platform engineering and FinOps."
>
	<div class="stack gap-20">
		<main class="wrapper projects">
			<Hero
				title="Projects"
				tagline="From art installations to platform engineering and FinOps."
				align="start"
			/>
			<Grid>
				{
					projects.map((project) => (
						<li>
							<PortfolioPreview project={project} />
						</li>
					))
				}
			</Grid>
		</main>

		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.projects {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}
</style>
