---
import Icon from './Icon.astro';
import type { iconPaths } from './IconPaths';
import ThemeToggle from './ThemeToggle.astro';

/** Main menu items */
const textLinks: { label: string; href: string }[] = [
	{ label: 'Home', href: '/' },
	{ label: 'Projects', href: '/work/' },
	{ label: 'Experience', href: '/experience/' },
	{ label: 'About', href: '/about/' },
];

/** Icon links to social media */
const iconLinks: { label: string; href: string; icon: keyof typeof iconPaths }[] = [
	{ label: 'GitHub', href: 'https://github.com/fabioasdias', icon: 'github-logo' },
	{ label: 'LinkedIn', href: 'https://www.linkedin.com/in/fabio-dias/', icon: 'linkedin-logo'},
	{ label: 'Google Scholar', href: 'https://scholar.google.com/citations?hl=en&user=0D1ExLoAAAAJ', icon: 'graduation-cap'}
];

/** Test if a link is pointing to the current page. */
const isCurrentPage = (href: string) => {
	let pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
	if (pathname.at(0) !== '/') pathname = '/' + pathname;
	if (pathname.at(-1) !== '/') pathname += '/';
	return pathname === href || (href !== '/' && pathname.startsWith(href));
};
---

<nav>
	<div class="nav-inner">
		<a href="/" class="site-title">Fabio Dias</a>

		<menu-button>
			<template>
				<button class="menu-button" aria-expanded="false" aria-label="Menu">
					<Icon icon="list" />
				</button>
			</template>
		</menu-button>

		<div id="menu-content" hidden>
			<ul class="nav-items">
				{
					textLinks.map(({ label, href }) => (
						<li>
							<a aria-current={isCurrentPage(href) ? 'page' : null} class="link" href={href}>
								{label}
							</a>
						</li>
					))
				}
			</ul>

			<div class="nav-right">
				<div class="socials">
					{
						iconLinks.map(({ href, icon, label }) => (
							<a href={href} class="social" target="_blank" rel="noopener" title={label}>
								<span class="sr-only">{label}</span>
								<Icon icon={icon} />
							</a>
						))
					}
				</div>
				<ThemeToggle />
			</div>
		</div>
	</div>
</nav>

<script>
	class MenuButton extends HTMLElement {
		constructor() {
			super();
			this.appendChild(this.querySelector('template')!.content.cloneNode(true));
			const btn = this.querySelector('button')!;
			const menu = document.getElementById('menu-content')!;
			menu.hidden = true;
			menu.classList.add('menu-content');

			const setExpanded = (expand: boolean) => {
				btn.setAttribute('aria-expanded', expand ? 'true' : 'false');
				menu.hidden = !expand;
			};

			btn.addEventListener('click', () => setExpanded(menu.hidden));

			const handleViewports = (e: MediaQueryList | MediaQueryListEvent) => {
				setExpanded(e.matches);
				btn.hidden = e.matches;
			};
			const mediaQueries = window.matchMedia('(min-width: 50em)');
			handleViewports(mediaQueries);
			mediaQueries.addEventListener('change', handleViewports);
		}
	}
	customElements.define('menu-button', MenuButton);
</script>

<style>
	nav {
		position: relative;
		z-index: 9999;
		border-bottom: 1px solid var(--gray-800);
	}

	.nav-inner {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1rem 1.5rem;
		max-width: 72rem;
		margin: 0 auto;
	}

	.site-title {
		font-family: var(--font-brand);
		font-size: var(--text-lg);
		font-weight: 600;
		color: var(--gray-0);
		text-decoration: none;
		letter-spacing: -0.02em;
	}

	.menu-button {
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0.5rem;
		border: 1px solid var(--gray-800);
		border-radius: 0.375rem;
		background: transparent;
		color: var(--gray-300);
		cursor: pointer;
		font-size: 1.25rem;
	}

	.menu-button:hover {
		color: var(--gray-0);
		border-color: var(--gray-600);
	}

	.menu-button[hidden] {
		display: none;
	}

	.menu-content {
		position: absolute;
		top: 100%;
		left: 0;
		right: 0;
		background: var(--gray-999);
		border-bottom: 1px solid var(--gray-800);
		padding: 1rem 1.5rem;
	}

	.nav-items {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		list-style: none;
		margin: 0 0 1rem 0;
		padding: 0;
	}

	.link {
		display: block;
		padding: 0.5rem 0;
		color: var(--gray-300);
		text-decoration: none;
		font-size: var(--text-base);
		transition: color 0.15s;
	}

	.link:hover {
		color: var(--gray-0);
	}

	.link[aria-current='page'] {
		color: var(--accent-regular);
	}

	.nav-right {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding-top: 1rem;
		border-top: 1px solid var(--gray-800);
	}

	.socials {
		display: flex;
		gap: 0.5rem;
	}

	.social {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 2rem;
		height: 2rem;
		color: var(--gray-400);
		text-decoration: none;
		transition: color 0.15s;
	}

	.social:hover {
		color: var(--accent-regular);
	}

	@media (min-width: 50em) {
		nav {
			border-bottom: none;
		}

		.nav-inner {
			padding: 1.5rem 2rem;
		}

		.menu-content {
			position: static;
			display: flex;
			align-items: center;
			gap: 2rem;
			background: transparent;
			border: none;
			padding: 0;
		}

		.nav-items {
			flex-direction: row;
			gap: 0.25rem;
			margin: 0;
		}

		.link {
			padding: 0.5rem 0.75rem;
			font-size: var(--text-sm);
			border-radius: 0.25rem;
		}

		.link:hover {
			background: var(--gray-800);
		}

		.link[aria-current='page'] {
			color: var(--gray-0);
			background: var(--gray-800);
		}

		.link[aria-current='page']::after {
			content: '';
			position: absolute;
			bottom: -2px;
			left: 0.75rem;
			right: 0.75rem;
			height: 2px;
			background: var(--accent-regular);
		}

		.link {
			position: relative;
		}

		.nav-right {
			padding: 0;
			border: none;
		}

		.social {
			width: 2.25rem;
			height: 2.25rem;
		}
	}
</style>

