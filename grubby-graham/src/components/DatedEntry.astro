---
interface Props {
	title: string;
    date: string;
}

const { title, date } = Astro.props;
---
<h3>
    <div class="split-line">
        <span>{title}</span>
        <span>{date}</span>
    </div>
</h3>
<slot />
<br>

<style>
.split-line {
  display: flex;
  flex-wrap: wrap;
  gap: 0.25rem 1rem;
  justify-content: space-between;
  align-items: baseline;
}

.split-line span:first-child {
  flex: 1 1 auto;
  min-width: 0;
}

.split-line span:last-child {
  flex-shrink: 0;
  color: var(--gray-400);
  font-size: var(--text-sm);
}

@media (min-width: 50em) {
  .split-line {
    flex-wrap: nowrap;
  }

  .split-line span:last-child {
    font-size: inherit;
  }
}
</style>