---
interface Props {
	variant?: 'offset' | 'small';
}

const { variant } = Astro.props;
---

<ul class:list={['grid', { small: variant === 'small' }]}>
	<slot />
</ul>

<style>
	.grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1.5rem;
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.grid.small {
		grid-template-columns: repeat(2, 1fr);
	}

	@media (min-width: 36em) {
		.grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (min-width: 56em) {
		.grid:not(.small) {
			grid-template-columns: repeat(3, 1fr);
			gap: 2rem;
		}

		.grid.small {
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
			gap: 1.5rem;
		}

		.grid.small > :global(*) {
			flex-basis: 18rem;
		}
	}
</style>
